<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dartmouth.cs.dartmouthcoach.ScheduleFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Date:"
                android:textSize="18dp"
                android:paddingTop="16dp"
                android:textStyle="bold"
                android:paddingLeft="10dp"/>

            <Button
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Date"
                android:gravity="left|center_vertical"
                android:id="@+id/date_button"
                android:background="@color/white">
            </Button>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Departure Location:"
                android:textSize="18dp"
                android:paddingTop="24dp"
                android:textStyle="bold"
                android:paddingLeft="10dp"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/depature_spinner"
                android:paddingLeft="10dp">
            </Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arrival Location:"
                android:textSize="18dp"
                android:paddingTop="24dp"
                android:textStyle="bold"
                android:paddingLeft="10dp"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/arrival_spinner"
                android:paddingLeft="10dp">
            </Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Departure Time:"
                android:textSize="18dp"
                android:paddingTop="24dp"
                android:textStyle="bold"
                android:paddingLeft="10dp"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/departure_time_spinner"
                android:paddingLeft="10dp">
            </Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price:"
                android:textSize="18dp"
                android:id="@+id/price_text"
                android:paddingTop="24dp"
                android:textStyle="bold"
                android:paddingLeft="10dp"/>

            <Button
                android:layout_width="200dp"
                android:layout_marginTop="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Purchase"
                android:id="@+id/purchase_button">
            </Button>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
